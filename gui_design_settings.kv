                                source: 'Program_Files/items_96p/potion-health.png'
                                size: 96, 96 # Set the size of the image to 96x96 pixels
                                pos: (self.center_x - 48, self.center_y - 48)  # Center the image within the button

                    Button:
                        text: 'Health Potion'
