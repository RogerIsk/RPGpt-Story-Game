<InGameScreen>:
    id: ingame_screen
    hero_name: ""
    hero_species: ""
    hero_hp: ""
    hero_dmg: ""
    hero_armor: ""
    hero_class: ""
    world_type: ""

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Rectangle:
                source: 'Program_Files/4_in_game_images/in_game_background.png'
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: None
            height: 40
            padding: 0
            spacing: 10
            pos_hint: {'top': 1}

            HoverButtonRounded:
                text: 'Back'
                size_hint: (None, None)
                size: (120, 50)
                font_size: 20
                background_color: [0, 0, 0, 0]
                background_normal: ''
                on_release: root.go_back_to_menu(self)

            HoverButtonRounded:
                text: 'Statistics'
                size_hint: (None, None)
                size: (120, 50)
                font_size: 20
                background_color: [0, 0, 0, 0]
                background_normal: ''
                on_release: root.toggle_panel('stats_panel')

            HoverButtonRounded:
                text: 'Inventory'
                size_hint: (None, None)
                size: (120, 50)
                font_size: 20
                background_color: [0, 0, 0, 0]
                background_normal: ''
                on_release: root.toggle_panel('backpack', 'stats_panel')

            HoverButtonRounded:
                text: 'History'
                size_hint: (None, None)
                size: (120, 50)
                font_size: 20
                background_color: [0, 0, 0, 0]
                background_normal: ''

            HoverButtonRounded:
                text: 'Load'
                size_hint: (None, None)
                size: (120, 50)
                font_size: 20
                background_color: [0, 0, 0, 0]
                background_normal: ''

            HoverButtonRounded:
                text: 'Save'
                size_hint: (None, None)
                size: (120, 50)
                font_size: 20
                background_color: [0, 0, 0, 0]
                background_normal: ''

            HoverButtonRounded:
                text: 'Exit'
                size_hint: (None, None)
                size: (120, 50)
                font_size: 20
                background_color: [0, 0, 0, 0]
                background_normal: ''
                on_release: root.exit_app(self)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.9)

            FloatLayout:
                # Position the Label at the bottom without affecting the input text
                Label:
                    id: output_label
                    size_hint: (0.16, 0.6)
                    font_size: 16
                    color: (1, 1, 1, 1)
                    valign: 'bottom'
                    halign: 'left'
                    pos_hint: {'x': 0.08, 'y': -0.6}  # Places the label at the bottom left corner

            # Hidden stats panel, initially invisible
            BoxLayout:
                id: stats_widget
                orientation: 'vertical'
                size_hint: (0.6, 0.5)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                opacity: 0
                disabled: True
                canvas.before:
                    Color:
                        rgba: (0.8, 0.4, 0, 0.5)  # Dark orange with 50% opacity
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

                Label:
                    text: f"Name: {root.hero_name}"
                    font_size: 20
                    color: (1, 1, 1, 1)

                Label:
                    text: f"Species: {root.hero_species}"
                    font_size: 20
                    color: (1, 1, 1, 1)

                Label:
                    text: f"Class: {root.hero_class}"
                    font_size: 20
                    color: (1, 1, 1, 1)

                Label:
                    text: f"World Type: {root.world_type}"
                    font_size: 20
                    color: (1, 1, 1, 1)

                Label:
                    text: f"HP: {root.hero_hp}"
                    font_size: 20
                    color: (0, 1, 0, 1)

                Label:
