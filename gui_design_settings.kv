                                pos: (self.center_x - 48, self.center_y - 48)  # Center the image within the button

                    Button:
                        text: 'Chainmail'
                        size_hint: None, None
                        size: 100, 100
                        background_normal: 'Program_Files/items_96p/background.jpg'
