                        canvas.after:
                            Color:
                                rgba: 1, 1, 1, 1  # Ensure the image is drawn with full opacity
                            Rectangle:
                                source: 'Program_Files/items_96p/armor-chainmail.png'
                                size: 96, 96 # Set the size of the image to 96x96 pixels
                                pos: (self.center_x - 48, self.center_y - 48)  # Center the image within the buttone text display on button
                        text: ''  

                    Button:
                        text: 'Health Potion'
                        size_hint: None, None
                        size: 100, 100
                        background_normal: 'Program_Files/items_96p/background.jpg'
                        background_down: 'Program_Files/items_96p/background-click.jpg'  # Optional
                        text: ''
                        canvas.before:
                            Color:
                                rgba: 1.0, 0.92, 0.8, 1  # Set your desired background color (R, G, B, A)
